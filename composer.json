{
  "name": "diviky/botman-driver-messenger-people",
  "license": "MIT",
  "description": "Messager People Whatsapp Bot Framework driver for BotMan",
  "keywords": ["Bot", "BotMan", "BotFramework", "Bot Framework"],
  "homepage": "http://github.com/diviky/botman-driver-messenger-people",
  "authors": [
    {
      "name": "Sankar Suda",
      "email": "sankar.suda@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.0",
    "botman/botman": "~2.0 || ~3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~5.0",
    "mockery/mockery": "dev-master",
    "ext-curl": "*"
  },
  "autoload": {
    "psr-4": {
      "BotMan\\Drivers\\MessengerPeople\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "cs": "php-cs-fixer fix"
  },
  "extra": {
    "laravel": {
      "providers": [
        "BotMan\\Drivers\\MessengerPeople\\Providers\\MessengerPeopleServiceProvider"
      ]
    }
  }
}
